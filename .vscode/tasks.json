{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-14 build active file",
            "command": "/usr/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${workspaceFolder}/include/",
                "${workspaceFolder}/src/*.cpp",
                //"${workspaceFolder}/src/*.c",
                //"${workspaceFolder}/src/*.s",
                "-o",
                "${workspaceFolder}/bin/run",
                "-lSDL2",
                "-lSDL2main",
                "-lSDL2_image",
                "-lSDL2_mixer"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}